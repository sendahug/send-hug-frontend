{
  "name": "send-a-hug",
  "version": "1.0.0",
  "description": "Send a hug site.",
  "main": "app.bundle.js",
  "size-limit": [
    {
      "name": "JS Bundle",
      "limit": "360 kB",
      "path": [
        "dist/app.bundle.js"
      ]
    },
    {
      "name": "CSS",
      "limit": "25 kB",
      "path": [
        "dist/css/*"
      ]
    },
    {
      "name": "Public Templates",
      "limit": "31 kB",
      "path": [
        "dist/app/aboutApp.component.html",
        "dist/app/app.component.html",
        "dist/app/appAlert.component.html",
        "dist/app/displayNameEditForm.component.html",
        "dist/app/errorPage.component.html",
        "dist/app/fullList.component.html",
        "dist/app/headerMessages.component.html",
        "dist/app/itemDeleteForm.component.html",
        "dist/app/loader.component.html",
        "dist/app/loginPage.component.html",
        "dist/app/mainPage.component.html",
        "dist/app/newItem.component.html",
        "dist/app/notifications.component.html",
        "dist/app/passwordResetForm.component.html",
        "dist/app/popUp.component.html",
        "dist/app/post.component.html",
        "dist/app/postEditForm.component.html",
        "dist/app/reportForm.component.html",
        "dist/app/searchResults.component.html",
        "dist/app/signUpPage.component.html",
        "dist/app/siteMap.component.html",
        "dist/app/sitePolicies.component.html",
        "dist/app/supportPage.component.html"
      ]
    },
    {
      "name": "Admin Templates",
      "limit": "5 kB",
      "path": [
        "dist/app/adminBlocks.component.html",
        "dist/app/adminDashboard.component.html",
        "dist/app/adminFilters.component.html",
        "dist/app/adminReports.component.html"
      ]
    },
    {
      "name": "User Templates",
      "limit": "150 kB",
      "path": [
        "dist/app/iconEditor.component.html",
        "dist/app/messages.component.html",
        "dist/app/myPosts.component.html",
        "dist/app/settings.component.html",
        "dist/app/userPage.component.html"
      ]
    },
    {
      "name": "Static Assets",
      "limit": "300 kB",
      "path": [
        "dist/assets/fonts/*",
        "dist/assets/icons/*",
        "dist/assets/img/bear.svg",
        "dist/assets/img/bg_pattern.svg",
        "dist/assets/img/dog.svg",
        "dist/assets/img/kitty.svg",
        "dist/assets/img/Logo_notifications.png",
        "dist/assets/img/Logo.svg",
        "dist/assets/img/pwa_icon.svg"
      ]
    }
  ],
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "format": "prettier .  --write",
    "localDev": "gulp localDev",
    "test": "gulp test",
    "cypress": "cypress run",
    "cypress:open": "cypress open",
    "e2e": "gulp e2e",
    "build": "gulp dist",
    "build:staging": "gulp dist && rollup --config --mode staging",
    "start": "node server.js",
    "rollup:dev": "rollup --config --mode development",
    "rollup:live": "rollup --config",
    "size": "npm run build && size-limit",
    "cleanBuild": "node cleanDist.js"
  },
  "overrides": {
    "karma-jasmine": {
      "jasmine-core": "^4.1.0 || ^5.0.0"
    }
  },
  "author": "Shir Bar Lev",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@size-limit/file": "^11.1.4",
    "@size-limit/preset-app": "^11.1.4",
    "@size-limit/time": "^11.1.4",
    "@types/jasmine": "^5.1.4",
    "@types/node": "^20.14.12",
    "autoprefixer": "^10.4.19",
    "browser-sync": "^3.0.2",
    "glob": "^11.0.0",
    "gulp": "^5.0.0",
    "gulp-less": "^5.0.0",
    "gulp-postcss": "^10.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.4",
    "jasmine-core": "^5.2.0",
    "jasmine-spec-reporter": "^7.0.0",
    "karma": "^6.4.3",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "karma-rollup-preprocessor": "^7.0.8",
    "karma-sourcemap-loader": "^0.4.0",
    "karma-viewport": "^1.0.9",
    "less": "^4.2.0",
    "magic-string": "^0.30.10",
    "postcss": "^8.4.39",
    "prettier": "^3.3.3",
    "puppeteer": "^22.14.0",
    "rollup": "^4.18.0",
    "rollup-plugin-istanbul": "^5.0.0",
    "size-limit": "^11.1.3",
    "tslib": "^2.6.3",
    "typescript": "^5.4.5",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  },
  "dependencies": {
    "@angular/animations": "^17.3.9",
    "@angular/common": "^17.3.9",
    "@angular/compiler": "^17.3.9",
    "@angular/compiler-cli": "^17.3.9",
    "@angular/core": "^17.3.9",
    "@angular/fire": "^17.1.0",
    "@angular/forms": "^17.3.9",
    "@angular/platform-browser": "^17.3.9",
    "@angular/platform-browser-dynamic": "^17.3.9",
    "@angular/router": "^17.3.9",
    "@angular/service-worker": "^17.3.9",
    "@fortawesome/angular-fontawesome": "^0.14.1",
    "@fortawesome/fontawesome-common-types": "^6.6.0",
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-brands-svg-icons": "^6.6.0",
    "@fortawesome/free-regular-svg-icons": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "compression": "^1.7.4",
    "core-js": "^3.37.1",
    "cypress": "^13.13.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "firebase": "^10.12.3",
    "idb": "^8.0.0",
    "rxjs": "^7.8.1",
    "zone.js": "^0.14.8"
  }
}
